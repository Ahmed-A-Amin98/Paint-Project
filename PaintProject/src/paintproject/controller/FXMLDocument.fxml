<BorderPane prefHeight="689.0" prefWidth="829.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paintproject.controller.PaintController">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    
                   
                </Menu>
            <Menu mnemonicParsing="false" text="save">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Undo">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Redo">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
               <Button mnemonicParsing="false" onAction="#freedraw" text="Free Draw" />
                    <TextField fx:id="brushSize" prefHeight="31.0" prefWidth="72.0" />
               <effect>
                  <Glow />
               </effect>
                </HBox>
                 <ColorPicker fx:id="colorPicker" />
                 <CheckBox fx:id="eraser" text="Eraser" />
            <Button fx:id="Rec" mnemonicParsing="false" onAction="#drawR" prefHeight="37.0" prefWidth="40.0">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="67.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Icon/images/imageedit_6_7033249996.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button mnemonicParsing="false" onAction="#drawS" prefHeight="35.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Icon/images/imageedit_1_3004626955.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button mnemonicParsing="false" onAction="#drawL" text="Line" />
            <ComboBox fx:id="comboBox" prefWidth="150.0" promptText="Shapes" />
            <Button mnemonicParsing="false" onAction="#drawC" text="Circle" />
            <Button mnemonicParsing="false" onAction="#drawEll" text="Ellipse" />
            <Button mnemonicParsing="false" onAction="#drawT" text="Triangle" />
            </ToolBar>
        </VBox>
    </top>
   <left>
        <Canvas fx:id="canvas" height="617.0" width="828.0" BorderPane.alignment="CENTER" />
